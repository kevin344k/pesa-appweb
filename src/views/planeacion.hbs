<link rel="stylesheet" href="/css/planner.css" />

<div class="container p-1 mt-4">
  <div class="row">
    <div class="col-12 col-lg-5">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="card-title">Planner</h3>
        </div>
        <div class="card-body">
          <form action="/ordenProd">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">#</span>
              <input
                type="text"
                class="form-control"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
                disabled
              />
            </div>

            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Product code</span>
              <input
                id="inputCodeProd"
                type="text"
                class="form-control"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
                data-toggle="modal"
                data-target="#modal-item-search"
              />
              <button
                class="btn btn-outline-secondary"
                data-bs-toggle="modal"
                data-bs-target="#modal-item-search"
                type="button"
                id=""
              ><i class="bi bi-search"></i></button>

            </div>
            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Product</span>
              <input
                type="text"
                class="form-control"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
            </div>
            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Machine</span>
              <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="FDON">IRWI 1</option>
                <option value="UND">IRWIN 2</option>
                <option value="FDON">IRWIN 3</option>
                <option value="UND">IRWIN 4</option>
                <option value="UND">IRWIN 5</option>
                <option value="UND">COMODORE</option>
              </select>
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >C.C</span>
              <input
                type="text"
                class="form-control"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
                readonly
              />
            </div>

            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Quantity</span>
              <input
                type="text"
                class="form-control"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
            </div>
            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Measurement</span>
              <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="FDON">FDON</option>
                <option value="UND">UND</option>
              </select>
            </div>
            <div class="input-group mb-3">
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Date start</span>
              <input
                type="DateTime-local"
                class="form-control text-center"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
            </div>
            <div class="input-group mb-3">

              <input
                type="DateTime-local"
                class="form-control text-center"
                placeholder=""
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
              <span
                class="input-group-text text-secondary"
                id="basic-addon1"
              >Date end</span>
            </div>
            <div class="d-grid gad-2">
              <button class="btn btn-primary btn-block">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-7">
      <div class="card text-center">

        <div class="card-header">
          <h3 class="card-title center"> TimeLine</h3>
        </div>
        <div id="timeline" class="card-body">
          <div id="chart_div"></div>

        </div>

      </div>
    </div>
  </div>
</div>

{{! ventana modal para buscar productos por codigo y cargar automaticamnete al planificador  }}
{{! una ventana mmodal esta constituido de  1) modal-header 2) modal-body 3) modal-footer}}

<div
  class="modal fade"
  id="modal-item-search"
  tabindex="-1"
  role="dialog"
  aria-labelledby="titleWindow"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="titleWindow">Load item</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">

        <div class="input-group">
          <input type="text" class="form-control" placeholder="insert code" />
          <button class="btn btn-outline-success" type="button" id=""><i
              class="bi bi-search"
            ></i></button>
        </div>
      </div>

      <div class="modal-footer">
        <button
          class="btn btn-info"
          type="button"
          data-bs-dismiss="modal"
        >Back</button>
        <button type="button" class="btn btn-success" type="button">
          Load
        </button>
      </div>
    </div>
  </div>
</div>

